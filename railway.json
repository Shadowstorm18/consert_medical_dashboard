{
    "builds": [
      {
        "src": "mongo-api/",
        "use": "@railway/buildpack",
        "cmd": "pip install -r requirements.txt"
      },
      {
        "src": "front_end/",
        "use": "@railway/npm",
        "cmd": "npm install && npm run build"
      }
    ],
    "deploy": [
      {
        "service": "api",
        "start": "uvicorn api:app --host 0.0.0.0 --port $PORT"
      },
      {
        "service": "frontend",
        "start": "serve -s build"
      }
    ]
  }
  